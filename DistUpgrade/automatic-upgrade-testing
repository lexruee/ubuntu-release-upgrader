#!/usr/bin/python

from optparse import OptionParser
from ChrootNonInteractive import Chroot
import os
import sys
import glob

# TODO:
# - show held-back packages 
# - log all the operation into the profile dir

def testUpgrade(profile):

    # setup log
    fd = os.open(os.path.join(os.path.dirname(profile),"result","out.log"),
                              os.O_RDWR|os.O_CREAT|os.O_TRUNC, 0644)
    os.dup2(fd,1)
    os.dup2(fd,2)

    # init the chroot
    chroot = Chroot(profile, os.getcwd())
    if not chroot.bootstrap():
        sys.exit(1)
    if not chroot.upgrade():
        sys.exit(1)


if __name__ == "__main__":

    parser = OptionParser()
    parser.add_option("-p", "--profile", dest="profile",
                      help="write report to FILE")
    parser.add_option("-a", "--auto", dest="auto", default=False,
                      action="store_true",
                      help="run all tests in profile/ dir")
    
    (options, args) = parser.parse_args()

    if options.auto:
        for d in glob.glob("./profile/*/DistUpgrade.cfg"):
            print "Testing: ",d
            testUpgrade(d)
            
    else:
        testUpgrade(options.profile)
    

